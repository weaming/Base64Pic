{
  "manifest_version": 2,
  "name": "ToolsBox",
  "version": "0.0.1",
  "author": "weaming",
  "offline_enabled": true,
  "description": "Encode Picture with Base64.\n\nExt:\n  1. Undirect in google search.\n  2. Google search \"g<TAB>\"",
  "homepage_url": "https://github.com/weaming/Base64Pic",
  "omnibox": { "keyword" : "g" },
  "icons": {
    "48": "icons/b64pic-48.png",
    "64": "icons/b64pic-64.png",
    "128": "icons/b64pic-128.png"
    },
  "background": {
    "persistent": false,
    "scripts": ["static/js/jquery-2.2.2.min.js", "eventPage.js"]
  },
  "permissions": ["tabs", "clipboardRead", "clipboardWrite", "notifications", "storage"],
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe-eval'",
  "browser_action": {
    "default_title": "用Base64编码你所看到的图片",
    "default_icon": "icons/b64pic-128.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "static/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.google.com.hk/*"
      ],
      "js": ["ext/singleJS/undirect.js"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["ext/singleJS/linkCursor.js"]
    }
  ],
  "options_page": "options.html#settings"
}